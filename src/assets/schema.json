{
  "definitions": {
    "attribute": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20
    },
    "skill": {
      "type": "boolean",
      "widget": {
        "formlyConfig": {
          "defaultValue": false
        }
      }
    }
  },
  "required": [
    "uuid",
    "name",
    "race",
    "class",
    "level",
    "avatar",
    "shortDescription"
  ],
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuid",
      "title": "UUID",
      "widget": {
        "formlyConfig": {
          "hide": true
        }
      }
    },
    "name": {
      "type": "string",
      "title": "Name",
      "minLength": 1,
      "maxLength": 25
    },
    "race": {
      "type": "string",
      "title": "Race",
      "enum": [
        "Dwarf",
        "Elf",
        "Halfling",
        "Human",
        "Dragonborn",
        "Gnome",
        "Half-Elf",
        "Half-Orc",
        "Tiefling",
        "Tabaxi",
        "Lizardfolk"
      ]
    },
    "class": {
      "type": "string",
      "title": "Class",
      "enum": [
        "Fighter",
        "Rogue",
        "Wizard",
        "Cleric",
        "Bard",
        "Druid",
        "Monk",
        "Paladin",
        "Ranger",
        "Sorcerer",
        "Warlock",
        "Barbarian"
      ]
    },
    "level": {
      "type": "integer",
      "title": "Level",
      "minimum": 1,
      "maximum": 20
    },
    "avatar": {
      "type": "string",
      "title": "Avatar",
      "widget": {
        "formlyConfig": {
          "type": "image"
        }
      }
    },
    "shortDescription": {
      "type": "string",
      "title": "Short Description",
      "minLength": 10,
      "maxLength": 100,
      "widget": {
        "formlyConfig": {
          "type": "textarea",
          "templateOptions": {
            "rows": 2,
            "placeholder": "Short description for your character card"
          }
        }
      }
    },
    "longDescription": {
      "type": "string",
      "title": "Long Description",
      "minLength": 10,
      "maxLength": 1000,
      "widget": {
        "formlyConfig": {
          "type": "textarea",
          "templateOptions": {
            "rows": 5,
            "placeholder": "Full information about your character visible on the character page"
          }
        }
      }
    },
    "attributes": {
      "type": "object",
      "title": "Attributes",
      "properties": {
        "strength": {
          "$ref": "#/definitions/attribute",
          "title": "Strength"
        },
        "dexterity": {
          "$ref": "#/definitions/attribute",
          "title": "Dexterity"
        },
        "constitution": {
          "$ref": "#/definitions/attribute",
          "title": "Constitution"
        },
        "intelligence": {
          "$ref": "#/definitions/attribute",
          "title": "Intelligence"
        },
        "wisdom": {
          "$ref": "#/definitions/attribute",
          "title": "Wisdom"
        },
        "charisma": {
          "$ref": "#/definitions/attribute",
          "title": "Charisma"
        }
      }
    },
    "skills": {
      "type": "object",
      "title": "Skills",
      "properties": {
        "acrobatics": {
          "$ref": "#/definitions/skill",
          "title": "Acrobatics"
        },
