          "title": "Insight"
        },
        "intimidation": {
          "$ref": "#/definitions/skill",
          "title": "Intimidation"
        },
        "investigation": {
          "$ref": "#/definitions/skill",
          "title": "Investigation"
        },
        "medicine": {
          "$ref": "#/definitions/skill",
          "title": "Medicine"
        },
        "nature": {
          "$ref": "#/definitions/skill",
          "title": "Nature"
        },
        "perception": {
